inherit R kde4

DESCRIPTION="KDE R GUI"
HOMEPAGE="http://rkward.sourceforge.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"
PATCH_URI="0.5.1-as-needed.patch"

# R.css provided by R
# r.xml provided by kdelibs (libktexteditor)
rkward_CONTENTS="--exclude=R.css --exclude=r.xml etc/ usr/"
PKG_IGNORE="${R_SITELIB#/}/R.css usr/share/kde4/apps/katepart/syntax/r.xml"

CYGCMAKE_ARGS="
	-DR_EXECUTABLE=${R}
	-DR_HOME=${R_HOME}
	-DR_INCLUDEDIR=${R_INCLUDEDIR}
	-DR_LIBDIR=${R_SITELIB}
"
